<div>
    <form name="shopProductClassEditForm" novalidate>

        <div class="modal-header">
            <button type="button" class="close" aria-label="Close">
				<span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">
                <span>@L("EditShopProductClass")</span>
            </h4>
        </div>

		<div class="modal-body">
			<div class="form-group form-float">
				<div class="form-line">
					<input class="form-control" type="text" name="ClassName" ng-model="vm.shopProductClass.className" required maxlength="64" minlength="2">
					<label class="form-label">@L("ClassName")</label>
				</div>
			</div>
			<div class="form-group form-float">
				<div class="form-line">
					<input type="text" name="Name" class="form-control" ng-model="vm.shopProductClass.description" required maxlength="128">
					<label class="form-label">@L("Description")</label>
				</div>
			</div>
			<div class="form-group form-float">
				<div class="form-line">
					<input type="text" name="DisplayOrder" class="form-control" ng-model="vm.shopProductClass.displayOrder" maxlength="20">
					<label class="form-label">@L("DisplayOrder")</label>
				</div>
			</div>
		</div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="shopProductClassEditForm.$invalid">@L("Save")</button>
        </div>

    </form>
</div>